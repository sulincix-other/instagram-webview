{
    "app-id": "org.sulincix.instagram",
    "sdk": "org.kde.Sdk",
    "runtime": "org.kde.Platform",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.10",
    "command": "instagram-qt6",
    "runtime-version": "6.10",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=pulseaudio",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=system-bus",
        "--device=dri",
        "--env=QTWEBENGINEPROCESS_PATH=/app/bin/QtWebEngineProcess",
        "--env=QTWEBENGINE_CHROMIUM_FLAGS=--no-sandbox"
    ],
    "modules": [
        {
            "name": "instagram-qt6",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "file",
                    "path": "main.cpp"
                },
                {
                    "type": "file",
                    "path": "meson.build"
                },
                {
                    "type": "file",
                    "path": "instagram.desktop"
                },
                {
                    "type": "file",
                    "path": "instagram-qt6.svg"
                }
            ]
        }
    ]
}
